---
import BaseHead from '../components/sections/header/BaseHead.astro';
import Navigation from '../components/sections/header/Navigation.astro';

const { title, description, permalink, publishDate, ogImageUrl, canonicalURL } =
  Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <script>
      const checkbox: HTMLInputElement = document.querySelector('#checkbox');
      const html = document.querySelector('html');
      const toggleDarkMode = () => {
        checkbox!.checked
          ? html.classList.add('dark')
          : html.classList.remove('dark');
      }; // calling the function directly
      toggleDarkMode();
      checkbox.addEventListener('click', toggleDarkMode);
    </script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Cormorant:wght@300;400;500;600&family=Roboto:wght@300;400;500&display=swap');
    </style>
    <BaseHead
      title={title}
      description={description}
      permalink={permalink}
      canonicalURL={canonicalURL}
      publishDate={publishDate}
      ogImageUrl={ogImageUrl}
    />
    <Navigation client:load />
  </head>
  <body class="bg-light-bg dark:bg-dark text-dark dark:text-light-txt">
    <main>
      <slot />
    </main>
  </body>
</html>
