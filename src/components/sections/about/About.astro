---
import { site } from '../../../data/site';
import Wrapper from '../../../layouts/Wrapper.astro';
const contact = `The best way to get in touch with me is to`;
const jobs = `I'm currently interested in finding a summer internship, with the potential for growth. If you think I'd be a fit, I'd love to work with you.`;
const socailLinks = [site.github, site.linkedIn, site.github];
---

<Wrapper>
  <div class='py-5 my-5'>
    <h1 class='font-heading text-xl font-bold my-5'>About Me</h1>
    <p class='font-body'>
      I'm a student at the University of West Florida. I'm studying Computer
      Science with a concentration in A.I and Software Engineering.
    </p>
    <div class='flex flex-row justify-start py-10'>
      <!-- left column -->
      <div class='w-1/3 pr-10'>
        <div>
          <h4 class='text-lg'>Contact</h4>
          <span class='font-body text-gray-800 dark:text-gray-300'
            >{contact}
          </span>
          <a href='mailto:dhuson@davidhuson.dev' class='text-amber-200 font-body'>
            email me.
          </a>
        </div>
        <div class='py-3'>
          <h4 class='text-lg pb-3'>Job Intrests</h4>
          <span class='font-body'>{jobs}</span>
        </div>
        <div class='py-3'>
          <h4 class='text-lg'>Social Links</h4>
          <div class='flex flex-col p-1'>
            {socailLinks.map((item) => (
              <a
                href={item.link}
                target="_blank"
                rel="noopener noreferrer"
                class="font-body p-2 text-gray-600 dark:text-gray-300"
              >
                → {item.name}
              </a>
            ))}
          </div>
        </div>
      </div>
      <!-- right column -->
      <div class='w-2/3 pr-10 flex-col'>
        <div>
          <h4 class='text-lg py-5'>Technologies I'm Comfortable with</h4>
          <div class='flex-wrap'>
            <i class='devicon-cplusplus-plain text-7xl text-slate-200 mr-3'></i>
            <i class='devicon-java-plain-wordmark text-7xl text-slate-200 mr-3'
            ></i>
            <i class='devicon-javascript-plain colored text-7xl mr-3'></i>
            <i class='devicon-typescript-plain colored text-7xl mr-3'></i>
            <i class='devicon-react-original colored text-7xl mr-3'></i>
            <i class='devicon-graphql-plain colored text-7xl mr-3'></i>
            <i class='devicon-mysql-plain colored text-7xl mr-3'></i>
            <i class='devicon-nodejs-plain colored text-7xl mr-3'></i>
          </div>
        </div>
        <div>
          <h4 class="text-lg py-5">Soft Skills</h4>
          <div class="flex-col">
            <ul class="text-md">
              <li class="py-1 font-body"><span class="pr-2">→</span>Communication</li>
              <li class="py-1"><span class="pr-2">→</span>Management/Leadership</li>
              <li class="py-1"><span class="pr-2">→</span>Quick Learner</li>
              <li class="py-1"><span class="pr-2">→</span>Self Motivated</li>
              <li class="py-1"><span class="pr-2">→</span>Teaching/Mentoring peers</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Wrapper>